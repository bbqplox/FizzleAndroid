<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.noellin.fizzle.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <ImageView android:id="@+id/splashscreen" android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:src="@drawable/fizzlelogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashscreen"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold|italic"
        android:text="Make alcohol great again..."
        android:textColor="#61202a" />

</RelativeLayout>
