<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drink Description."
        android:id="@+id/drink_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/fizzleImage"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_below="@+id/drink_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drink Description."
        android:id="@+id/drink_description"
        android:layout_below="@+id/fizzleImage"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dButton"
        android:text="OK"
        android:onClick="dismissListener"
        android:layout_below="@+id/drink_description"
        android:layout_centerHorizontal="true" />

</RelativeLayout>